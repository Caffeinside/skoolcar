[Unit]
Description=IRONCAR
After=network.target
PartOf=ironcar.service
After=ironcar.service

[Service]
User={{ ironcar_daemon_name }}
Group={{ ironcar_storage_group_name }}
Environment=IRONCAR_ETC_DIR={{ ironcar_service_etc_dir }}
Environment=IRONCAR_VAR_DIR={{ ironcar_var_dir }}
Environment=IRONCAR_MODEL_DIR={{ ironcar_model_dir }}
ExecStart=/opt/ironcar/current/bin/python -m ironcar
WorkingDirectory=/opt/ironcar/current
Restart=on-failure
SuccessExitStatus=3 4
RestartForceExitStatus=3 4
UMask=0002

[Install]
WantedBy=ironcar.service
